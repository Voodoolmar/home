@model Models.PostPreview

<div class="blog-classic2-list clearfix">
    <div class="list-image ">
        <img alt="@Model.Title" class="img-responsive" src="@Model.ArticlePictureUrl">
    </div>
    <div class="list-main ">
        @{
            var url = Url.Page("/Post", new {id = Model.Id});
        }
        <h2 class="list-title "><a href="@url" title="@Model.Title">@Model.Title</a></h2>
        <div class="list-info">
            <span class="fa fa-eye" title="Количество просмотров"></span>
            <span title="Количество просмотров">@Model.ViewCount</span>

            @*<span class="sep"></span>

            <span class="fa fa-tag2" title="Теги"></span>
            @for (var i = 0; i < Model.Tags.Length; i++)
            {
                var tag = Model.Tags[i];
                //TODO::Ссылка на тег
                <a href="#" title="@tag">@tag</a>@(i== Model.Tags.Length-1 ? "" : ", ")
            }*@

            <span class="sep"></span>

            <span class="fa fa-bubble-dots" title="Коментариев"></span>
            @{  
                var commentUrl = url + "#comments";
            }
            <a href="@commentUrl" title="Коментариев">@Model.CommentCount</a>
        </div>
        <div class="list-description ">@Model.Description</div>
        <div class="clearfix list-bottom-info ">
            <a href="@url" class="list-more " title="Читать полностью...">Читать полностью...</a>
            <div class="list-info no-margin right ">
                <span class="fa fa-bubble-dots " title="Коментариев"></span>
                <a href="@commentUrl" title="Коментариев">@Model.CommentCount</a>

                <span class="sep"></span>

                <span class="fa fa-share2 " title="Поделиться"></span>
                Поделиться
            </div>
        </div>
    </div>
</div>