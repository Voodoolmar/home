doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name="description" content="Ремонт и отделка")
    title Ремонт и отделка
    link(rel='stylesheet', type='text/css', href='/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/css/freelancer.css')
    link(rel="shortcut icon", href="/favicon.ico")

    link(rel='stylesheet', type='text/css', href='/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Russo+One&subset=latin,cyrillic')
    link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Neucha&subset=latin,cyrillic')
  body#page-top.index
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header.page-scroll
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#page-top')
            img.hidden-xs(src="img/logo-sm.png", alt="", style='margin-top: -30px;')
            img.visible-xs(src="img/logo-xs.png", alt="") 
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li.hidden
              a(href='#page-top') 
            li.page-scroll
              a(href='#portfolio') Портфолио
            li.page-scroll
              a(href='#about') О нас
            li.page-scroll
              a(href='#contact') Контакты
    header
        .container
            .row
                .col-lg-12
                    img.img-responsive(src="img/profile.png", alt="")
                    .intro-text
                        span.name Ремонт и отделка
                        hr.star-light
                        span.skills Гарантия качества
    block content
    footer.text-center
        .footer-above
            .container
                .row
                    .footer-col.col-md-4
                        h3 Location
                        p 
                            |3481 Melrose Place 
                            br 
                            |Beverly Hills, CA 90210
                    .footer-col.col-md-4
                        h3 Around the Web
                        ul.list-inline
                            li
                                a(href="#").btn-social.btn-outline
                                    i.fa.fa-fw.fa-facebook
                            li
                                a(href="#").btn-social.btn-outline
                                    i.fa.fa-fw.fa-google-plus
                            li
                                a(href="#").btn-social.btn-outline
                                    i.fa.fa-fw.fa-twitter
                            li
                                a(href="#").btn-social.btn-outline
                                    i.fa.fa-fw.fa-linkedin
                            li
                                a(href="#").btn-social.btn-outline
                                    i.fa.fa-fw.fa-dribbble                            
                    .footer-col.col-md-4
                        h3 О нас
                        p Freelance is a free to use, open source Bootstrap theme created by
                            a(href='http://startbootstrap.com') Start Bootstrap                  
        .footer-below
            .container
                .row
                    .col-lg-12 Copyright &copy; Ремонт и отделка #{new Date().getFullYear()}
    
    .scroll-top.page-scroll.visible-xs.visible-sm
        a.btn.btn-primary(href="#page-top")
            i.fa.fa-chevron-up     
    block modals
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.min.js')
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js')
    script(src='/js/classie.js')
    script(src='/js/cbpAnimatedHeader.js')
    script(src='/js/jqBootstrapValidation.js')
    script(src='/js/contact_me.js')
    script(src='/js/freelancer.js')

    block scripts
